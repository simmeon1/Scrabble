@model IEnumerable<Scrabble.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameLanguage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RackSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WordDictionary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Board)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pouch)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameLanguage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RackSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WordDictionary.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Board.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pouch.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
